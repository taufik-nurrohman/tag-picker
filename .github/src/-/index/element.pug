extends ../_index.pug

block state
  - const title = 'Tag Picker'
  - const scripts = ['../index.min.js', 'element.min.js']
  - const styles = ['../index.min.css']

block script
  script
    | const picker = document.querySelector('tag-picker');

block style
  style
    | .tag-picker-source[readonly] + .tag-picker {
    |   background-color: #eee;
    |   border-color: #999;
    | }
    | .tag-picker-source[disabled] + .tag-picker {
    |   background-color: #eee;
    |   border-color: #999;
    | }
    | .tag-picker-source[disabled] + .tag-picker .tag[title] {
    |   background-color: #aaa;
    | }

block content
  main
    p Test native HTML5 custom element. View the page source!
    p: tag-picker(name='tag-1' value='foo, bar, baz')
    p
      button(onclick='alert(picker.value);' type='button') Check Values
      = ' '
      button(onclick='picker.disabled = !picker.disabled;' type='button') Toggle Disabled State
      = ' '
      button(onclick='picker.readOnly = !picker.readOnly;' type='button') Toggle Read-Only State
      = ' '
      button(onclick='picker.value = \'foo, bar, baz, qux\';' type='button') Set Values
    p: tag-picker(disabled name='tag-2' value='foo, bar')
    p: tag-picker(name='tag-3' readonly value='foo, bar')
    p: tag-picker(name='tag-4' placeholder='foo, bar, baz')
    h2 Usage
    pre: code
      | &lt;!DOCTYPE html&gt;
      | &lt;html dir="ltr"&gt;
      |   &lt;head&gt;
      |     &lt;meta charset="utf-8"&gt;
      |     &lt;link href="#[a(href='index.min.css' target='_blank') ./index.min.css]" rel="stylesheet"&gt;
      |   &lt;/head&gt;
      |   &lt;body&gt;
      |     &lt;p&gt;&lt;tag-picker name="tags" value="foo, bar, baz"&gt;&lt;/tag-picker&gt;&lt;/p&gt;
      |     &lt;script src="#[a(href='../index.min.js' target='_blank') ./index.min.js]"&gt;&lt;/script&gt;
      |     &lt;script src="#[a(href='element.min.js' target='_blank') ./index/element.min.js]"&gt;&lt;/script&gt;
      |     &lt;script&gt;
      |     // Get tag picker element
      |     const picker = document.querySelector('tag-picker');
      |     // Make tag picker disabled
      |     picker.disabled = true;
      |     // Make tag picker freezed
      |     picker.readOnly = true;
      |     // Set tag picker value
      |     picker.value = 'foo, bar';
      |     // Get tag picker value as string
      |     console.log(picker.value);
      |     &lt;/script&gt;
      |   &lt;/body&gt;
      | &lt;/html&gt;
