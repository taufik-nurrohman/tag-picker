extends ../_index.pug

block state
  - const title = 'Tag Picker'
  - const scripts = ['../index.min.js']
  - const styles = ['../index.min.css']

block script
  script
    | const picker = new TagPicker(document.querySelector('input'));
    |
    | picker.on('has.tag', function (tag) {
    |     const node = this._tags[tag];
    |     if (node) {
    |         node.classList.add(this.state.n + '__tag--target');
    |         setTimeout(() => {
    |             node.classList.remove(this.state.n + '__tag--target');
    |         }, 1000);
    |     }
    | });

block style
  style
    | .tag-picker {
    |   width: 100%;
    | }
    | .tag-picker__tag--target {
    |   background: rgb(255, 0, 0, 0.5);
    | }

block content
  main
    p Add #[em foo] again to see the effect!
    p: input(type='text' value='foo, bar, baz')