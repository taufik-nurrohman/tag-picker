extends ../_index.pug

block state
  - const title = 'Tag Picker'
  - const scripts = ['../index.min.js']
  - const styles = ['../index.min.css']

block script
  script
    | const picker = new TagPicker(document.querySelector('input'));
    |
    | picker.on('has.tag', function (e, tag) {
    |     alert('Tag “' + tag + '” already exists.');
    | });

block style
  style
    | .tag-picker {
    |   width: 100%;
    | }

block content
  main
    p Add #[em foo] again to see the effect!
    p: input(type='text' value='foo, bar, baz')