extends ../_index.pug

block state
  - const title = 'Tag Picker'
  - const scripts = ['../index.min.js']
  - const styles = ['../index.min.css']

block script
  script
    | const d = document.createElement('small');
    | const picker = new TagPicker(document.querySelector('input'));
    |
    | d.style.color = 'red';
    | d.style.display = 'block';
    | d.style.marginTop = '0.5em';
    |
    | picker.on('has.tag', function (e, tag) {
    |     d.innerHTML = 'Tag “' + tag + '” already exists.';
    |     picker.self.parentNode.append(d);
    |     setTimeout(() => d.remove(), 1000);
    | });

block style
  style
    | .tag-picker {
    |   width: 100%;
    | }

block content
  main
    p Add #[em foo] again to see the effect!
    p: input(type='text' value='foo, bar, baz')