extends ../_index.pug

block state
  - const scripts = ['../index.min.js']
  - const styles = ['../index.min.css']
  - const title = 'Tag Picker'

block script
  script
    | TagPicker._._valid = function (value) {
    |     return '@' + (value || "").toLowerCase().replace(/[^a-z\d-]/gi, '-').replace(/-+/g, '-').replace(/^-|-$/g, "");
    | };
    |
    | const picker = new TagPicker(document.querySelector('input'));

block style
  style
    | .tag-picker {
    |   width: 100%;
    | }

block content
  main
    p Convert tag name to #[code @kebab-case].
    p: input(type='text')