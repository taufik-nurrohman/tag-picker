extends ../_index.pug

block state
  - const scripts = ['../index.min.js']
  - const styles = ['../index.min.css']
  - const title = 'Tag Picker'

block script
  script
    | const picker = new TagPicker(document.querySelector('input'), {
    |     min: 3
    | });
    |
    | picker.on('min.tags', function (count, min) {
    |     alert('The minimum number of tags that must be inserted to be able to submit the form is ' + min + '.');
    | });

block style
  style
    | .tag-picker {
    |   width: 100%;
    | }

block content
  main
    p Minimum tags inserted to be able to submit the form is #[code 3]. Some text to copy: #[mark(style={'user-select': 'all'} tabindex='0') foo, bar, baz, qux]
    form(method='get' target='_blank')
      p: input(name='test' type='text')
      p: button(type='submit') Submit