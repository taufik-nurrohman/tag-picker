extends ../_index.pug

block state
  - const scripts = ['../index.min.js']
  - const styles = ['../index.min.css']
  - const title = 'Tag Picker'

block script
  script
    | const picker = new TagPicker(document.querySelector('input'), {
    |     pattern: '^[a-z\\d]+(-[a-z\\d]+)*$'
    | });
    |
    | picker.on('is.tag', name => {
    |     console.info('The input “' + name + '” is a valid tag name.');
    | });
    |
    | picker.on('not.tag', name => {
    |     console.error('The input “' + name + '” is not a valid tag name.');
    | });

block style
  style
    | .tag-picker {
    |   width: 100%;
    | }

block content
  main
    p Valid tag name must match the #[code='^[a-z\\d](-[a-z\\d])*$'] pattern!
    form(method='get')
      p: input(name='tags' type='text')
      p: button(type='submit') Submit