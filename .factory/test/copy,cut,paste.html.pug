extends ../_index.pug

block state
  - const scripts = ['../index.min.js']
  - const styles = ['../index.min.css']
  - const title = 'Tag Picker'

block script
  script
    | const picker = new TagPicker(document.querySelector('input'));
    |
    | picker.on('let.tag', name => {
    |     console.info('Tag “' + name + '” deleted successfully.');
    | });
    |
    | picker.on('set.tag', name => {
    |     console.info('Tag “' + name + '” inserted successfully.');
    | });

block style
  style
    | .tag-picker {
    |   width: 100%;
    | }

block content
  main
    p Some text to copy: #[mark(style={'user-select': 'all'} tabindex='0') foo, bar, baz, qux]
    p: input(type='text' value='a, b, c, d')