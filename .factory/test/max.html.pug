extends ../_index.pug

block state
  - const scripts = ['../index.min.js']
  - const styles = ['../index.min.css']
  - const title = 'Tag Picker'

block script
  script
    | const picker = new TagPicker(document.querySelector('input'), {
    |     max: 3
    | });
    |
    | picker.on('max.tags', function (count, max) {
    |     alert('The maximum number of tags that can be inserted is ' + max + '.');
    | });

block style
  style
    | .tag-picker {
    |   width: 100%;
    | }

block content
  main
    p Maximum tags allowed to be inserted is #[code 3]. Some text to copy: #[mark(style={'user-select': 'all'} tabindex='0') foo, bar, baz, qux]
    form(method='get' target='_blank')
      p: input(name='test' type='text')
      p: button(type='submit') Submit