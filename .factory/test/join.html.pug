extends ../_index.pug

block state
  - const scripts = ['../index.js']
  - const styles = ['../index.min.css']
  - const title = 'Tag Picker'

block script
  script
    | const sources = document.querySelectorAll('input');
    |
    | const pickerComma = new TagPicker(sources[0]);
    | const pickerSemiColon = new TagPicker(sources[1], {
    |     escape: [';'],
    |     join: '; '
    | });

block style
  style
    | .tag-picker {
    |   width: 100%;
    | }

block content
  main
    p Using #[code ,] as tags separator (default):
    p: input(type='text' value='a, b, c')
    p Using #[code ;] as tags separator:
    p: input(type='text' value='a; b; c')